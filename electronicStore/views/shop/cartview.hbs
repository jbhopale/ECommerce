{{#if products}}

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            <li class = "list-group-item">
                {{#each products}}
                <img src="{{this.item.productImagePath}}" width="20%" height="15%">
                <span class = "badge">{{this.quantity}}</span>
                <strong> {{this.item.productName}} </strong>
                <div>
                    <span class="label label-success"> <strong> Item Price: $ {{this.item.productPrice}}</strong></span>
                
                </div>
                
                <div>
                    <br>
                <a href="/reduce/{{#each this }}{{ this._id }}{{/each}}" class = "btn-danger btn" type="button">Delete by 1</a>
                
                </div>
                   <div>
                    <br>
                <a href="/add/{{#each this }}{{ this._id }}{{/each}}" class = "btn-info btn" type="button">Add by 1</a>
                
                </div>
                <hr>
                {{/each}}
            </li>
            
        </ul>
       
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong> Total Price: $ {{totalPrice}}</strong>
        <br>
        <a href="/checkoutcart" class = "btn-success btn" type="button">Checkout</a>
    </div>
</div>

{{else}}

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2> No items in cart</h2>
    </div>
</div>

{{/if}}
